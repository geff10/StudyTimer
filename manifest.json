{
	"manifest_version": 2,
	"name": "StudyTimer",
	"version": "2.2.1",
	"description": "StudyTimer helps you manage your studies and tasks using the Pomodoro Technique.",
	"icons": 
	{
		"96": "icons/logo.png"
	},
	"background": 
	{
		"scripts": [ 
			"script/timerFormat.js",
			"script/sound.js",
			"script/settings.js",
			"script/badge.js",
			"script/notification.js",
			"script/timer.js",
			"script/controller.js",
			"script/background.js"
		]
	},
	"browser_action": {
		"default_icon": {
			"96": "icons/logo.png"
		},
		"default_title": "StudyTimer",
		"default_popup": "popup/popup.html"
	},
	"permissions": [ "notifications", "storage" ]
}